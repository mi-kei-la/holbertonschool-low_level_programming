CC = gcc
SRC = main.c holberton.c
OBJ = $(SRC:.c=.o)
NAME = holberton
CFLAGS = -Wall -Werror -Wextra -pedantic

.PHONY: all $(NAME) clean oclean fclean re

all: $(NAME)

$(NAME): $(OBJ) m.h
	# Compile executable file.
	$(CC) $(OBJ) -o $(NAME)

clean:
	# Delete temp files and executable.
	$(RM) -f *~ $(NAME)

oclean:
	# Delete all object files.
	$(RM) $(OBJ)

fclean: oclean clean

re: fclean all
